--Display database ordered by priority
SELECT * FROM Target
ORDER BY priority asc;

--Display database grouped by aisle
SELECT * FROM Target
GROUP BY aisle;

--What is the total price of this trip? 
SELECT SUM(price) AS Total FROM Target;
